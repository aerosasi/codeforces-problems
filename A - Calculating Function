#include<bits/stdc++.h>
using namespace std;
 
int main()
{
    ios_base::sync_with_stdio(false);
 
    long long int ans,i,j,no,od=0;
 
    cin>>no;
 
    ans=0;
 
 
   if(no%2==0)
   {
       ans=no/2;
       cout<<ans;
   }
   else
   {
       od=0;
 
       for(i=1;i<=no;i=i+2)
       {
           od=od+1;
 
        }
     ans=-od;
     cout<<ans;
   }
 
}
