#include<bits/stdc++.h>
using namespace std;
 
 
 
int main()
{
    ios_base::sync_with_stdio(false);
 
    long long int ans=0,res,no,i,j,k,len;
    char a[50];
    cin>>no;
    if(no!=0)
    {
    cin>>a[0];
 
    for(i=1;i<no;i++)
    {
        cin>>a[i];
        if(a[i]==a[i-1])
        {
            ans++;
        }
    }
    cout<<ans<<endl;
    }
    else
    {
        cout<<ans<<endl;
    }
 
    return 0;
}
 
